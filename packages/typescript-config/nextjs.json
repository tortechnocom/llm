{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "allowJs": true,
        "noEmit": true
    },
    "include": [
        "src",
        "next-env.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}